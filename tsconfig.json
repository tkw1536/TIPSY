{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "es2022",
      "DOM",
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    // HACK HACK HACK
    // This is needed because the 'preact-markdown' module is broken.
    "skipLibCheck": true
  },
  
  "include": [
    "./src/**/*",
  ],
}