{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es2022",
      "DOM"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ]
}